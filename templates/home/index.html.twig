					</div>
					<div class="col-11">
						<div class="post-form my-4">
							{{include('post/new.html.twig')}}
						</div>
					</div>
					<div class="col-12">
						<div class="row" style="position: absolute; bottom: 40px; left: 80px;">
							<div class="col-2">
								<i class="far fa-image" style="font-size: 22px; color: #1d9bf0"></i>
							</div>
							<div class="col-2">
								<i class="fas fa-film" style="font-size: 22px; color: #1d9bf0"></i>
							</div>
							<div class="col-2">
								<i class="fas fa-chart-line" style="font-size: 22px; color: #1d9bf0"></i>
							</div>
							<div class="col-2">
								<i class="far fa-grin-alt" style="font-size: 22px; color: #1d9bf0"></i>
							</div>
							<div class="col-2">
								<i class="fas fa-calendar-alt" style="font-size: 22px; color: #1d9bf0"></i>
							</div>
						</div>
					</div>
				</div>
				<div class="row d-flex flex-column">
					{% for post in posts %}
						<div class="tweet" style="border: 1px solid rgb(56, 68, 77); padding: 20px">
							<div class="row">
								<div class="col-2" style="display: flex; justify-content: end;">
									<img src="http://www.doigtdecole.com/wp-content/uploads/2020/03/logo-rond-twitter.png" alt="" width="50px" height="50px" style="border-radius: 50px;">
								</div>
								<div class="col-10">
									<div class="row">
										<div class="col-10">
											<p>
													<span style="font-weight: bold; font-size: 16px;">{{post.author.firstname}}
														{{post.author.lastname}}
													</span>
												<span style="color: rgb(136, 153, 166); font-size: 14px;">@{{post.author.username}}
														·
														{{post.createdAt|dateToLetter}}</span>
											</p>
										</div>
										<div class="col-2">
											<button style="background-color: transparent; color: rgb(136, 153, 166); border: none;">
												<p style="font-size: 20px; font-weight: bold">...</p>
											</button>
										</div>
									</div>
									<div class="row">
										<div class="col-12">
											<p>{{ post.content }}</p>
										</div>
									</div>
								</div>

							</div>
							<div class="row" style="margin-top: 20px">
								<div class="col-3 d-flex justify-content-center align-items-center">
									<button class="btn-comments" style="background-color: transparent; color: rgb(136, 153, 166); border: none;">
										<i class="far fa-comment"></i>
										<span style="margin-left: 5px">{{post.comments |length}}</span>
									</button>
								</div>
								<div class="col-3 d-flex justify-content-center align-items-center">
									<button class="btn-retweets" style="background-color: transparent; color: rgb(136, 153, 166); border: none;">
										<i class="fas fa-retweet"></i>
										<span style="margin-left: 5px">83</span>
									</button>
								</div>
								<div class="col-3 d-flex justify-content-center align-items-center">
									<button class="btn-likes" style="background-color: transparent; color: rgb(136, 153, 166); border: none;">
										<i class="far fa-heart"></i>
										<span style="margin-left: 5px">{{post.likes |length}}</span>
									</button>
								</div>
								<div class="col-3 d-flex justify-content-center align-items-center">
									<button class="btn-share" style="background-color: transparent; color: rgb(136, 153, 166); border: none;">
										<i class="fas fa-share-square"></i>
									</button>
								</div>
							</div>
						</div>

						{% set items = items|merge([{
							id: post.id,
							likes: post.likes,
							comments: post.comments,
						}]) %}
					{% else %}

						<p>Aucun Gazouilli de trouvé 😢</p>
					{% endfor %}
				</div>

			<div data-items='{{items|json_encode}}'></div>
		</div>
			<div class="col-4">
