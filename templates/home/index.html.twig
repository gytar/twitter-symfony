{% extends 'base.html.twig' %}

{% block title %}Home | Gazouillis
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: #15202b!important;
		}
		.btn-comments:hover {
			color: #1c90de !important;
		}
		.btn-retweets:hover {
			color: #04aa73 !important;
		}
		.btn-likes:hover {
			color: #e31c7a !important;
		}
		.btn-share:hover {
			color: #1c90de !important;
		}
		.tweet:hover {
			transition-duration: 500ms;
			background-color: #253341 !important;
			cursor: pointer;
		}
		.row > .col-12 > i {
			font-size: 25px;
			margin-bottom: 30px;
		}
		.row > .col-12 > i:hover {
			background-color: #253341;
			border-radius: 50%;
			padding: 15px;
			cursor: pointer;
		}
		.form-control{
			background-color: #15202b;
			border: none;
			font-size: 20px;
		}
		.tendance .row:hover {
			transition-duration: 500ms;
			background-color: #253341 !important;
			cursor: pointer;
		}
		textarea{
			resize:none;
			overflow:hidden;
			height: 30px;
		}
	</style>
